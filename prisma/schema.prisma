generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(uuid())
  email            String    @unique
  password         String
  name             String?
  createdAt        DateTime  @default(now())
  phone            String?
  location         String?
  resetToken       String?   @unique
  resetTokenExpiry DateTime?
}

enum SkillType {
  technical
  soft
  interests
}

model Skills {
  id        String    @id @default(uuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  type      SkillType
  userId    String
}

model Education {
  id           String    @id @default(uuid())
  institution  String
  degree       String
  fieldOfStudy String?
  startDate    DateTime
  endDate      DateTime?
  description  String?
  isCurrently  Boolean   @default(false)
  userId       String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("education")
}

model Experience {
  id          String    @id @default(uuid())
  company     String
  position    String
  location    String?
  startDate   DateTime
  endDate     DateTime?
  description String?
  isCurrently Boolean   @default(false)
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("experience")
}

model CV {
  id        String   @id @default(uuid())
  fileUrl   String
  createdAt DateTime @default(now())
  userId    String
  style     String? // Optional field for CV style/template
  name      String?
}
